<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:visibility="visible"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/login_phone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColorHint="@color/grey"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        ></View>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/login_safe"
            />

        <EditText
            android:layout_toRightOf="@id/login_phone_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColorHint="@color/grey"
            android:hint="452623"
            />


        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="42.5dp"
            android:layout_marginTop="27dp"
            android:text="获取验证码"
            android:textColor="@color/login_base_color"
            android:layout_marginBottom="@dimen/dp_10"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/login_password"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textColorHint="@color/grey"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        ></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="39dp"
        android:orientation="horizontal">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/grey"
    android:text="登录即同意"
    />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/login_base_color"
            android:text="《用户使用协议》"
            />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:background="@color/login_base_color"
        android:layout_height="wrap_content"
        android:textColor="@color/white_90"
        android:layout_marginTop="@dimen/dp_16"
        android:text="注册"

        />

</LinearLayout>