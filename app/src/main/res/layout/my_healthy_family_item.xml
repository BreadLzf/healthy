<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/healthy_family_image"
        android:layout_width="33.5dp"
        android:layout_height="33.5dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:src="@drawable/my_family_healthy_item"
        />



    <TextView
        android:layout_toRightOf="@id/healthy_family_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名名称:"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black_70"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25.5dp"
        android:layout_marginBottom="25.5dp"
        android:layout_centerVertical="true"
        android:textColor="#6b6b6b"
        android:text="2017-3-15"

        />
</RelativeLayout>