<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:layout_marginLeft="11.5dp"
                android:layout_marginRight="11.5dp"
              android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/home_page_small_title"
        android:layout_width="wrap_content"

        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black_70"
        android:text="吃药真的是一门大学问吃药真的是一门大学问吃药真的是一门大学问吃药真的是一门大学问"
        android:layout_height="wrap_content"/>
    
    
    
 <LinearLayout
     android:id="@+id/home_page_small_img_layout"
     android:layout_width="match_parent"
     android:layout_height="78.5dp"
     android:orientation="horizontal"
     android:layout_below="@id/home_page_small_title"
     >

     <ImageView
         android:layout_below="@id/home_page_small_title"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="78.5dp"
         android:scaleType="fitXY"
         android:src="@drawable/do_home_big"
         />


     <ImageView
         android:layout_below="@id/home_page_small_title"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="78.5dp"
         android:scaleType="fitXY"
         android:layout_marginLeft="@dimen/dp_5"
         android:layout_marginRight="@dimen/dp_5"
         android:src="@drawable/do_home_big"
         />



     <ImageView
         android:layout_below="@id/home_page_small_title"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="78.5dp"
         android:scaleType="fitXY"

         android:src="@drawable/do_home_big"
         />


 </LinearLayout>

    <TextView
        android:id="@+id/home_page_big_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="肩部知识"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"
        android:layout_below="@id/home_page_small_img_layout"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:drawableLeft="@drawable/base_right_back"
        android:drawablePadding="13.5dp"
        />





    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"
        android:layout_below="@id/home_page_small_img_layout"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        android:drawableLeft="@drawable/base_right_back"
        android:drawablePadding="13.5dp"
        />


</RelativeLayout>