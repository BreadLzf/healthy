<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
              android:layout_height="match_parent">

    
    <ImageView
        android:id="@+id/body_examine_image"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@drawable/do_home_big"
        android:scaleType="fitXY"
        android:layout_height="162.5dp"/>



    <TextView
        android:id="@+id/body_examine_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="14.5dp"
        android:text="图文报告标题"
        android:textSize="@dimen/text_size_17"
        android:textColor="@color/black_70"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/body_examine_image"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/body_examine_two_title"
        android:layout_below="@id/body_examine_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图文副标题图文副标题"
        android:textSize="@dimen/text_size_13"
        android:textColor="#656565"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_centerHorizontal="true"
        />



    <TextView
        android:id="@+id/body_examine_first_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_below="@id/body_examine_two_title"
        android:text="图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告"
        />


    <TextView
        android:layout_below="@id/body_examine_first_msg"
        android:id="@+id/body_examine_two_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告图文报告"
        />
    
</RelativeLayout>