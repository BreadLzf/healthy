<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12">


    <TextView
        android:id="@+id/body_healthy_item_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.5dp"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/person_base_text_color"
        android:drawableLeft="@drawable/base_right_back"
        android:drawablePadding="7.5dp"
        android:text="2017/02/01"
        />


    <TextView
        android:id="@+id/body_healthy_item_compress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_healthy_item_data_tv"
        android:layout_marginBottom="13.5dp"
        android:layout_marginTop="15.5dp"
        android:text="收缩压:"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"
        />


    <TextView
        android:id="@+id/healthy_item_compress_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_healthy_item_data_tv"
        android:layout_marginBottom="13.5dp"
        android:layout_marginTop="15.5dp"
        android:layout_toRightOf="@id/body_healthy_item_compress"
        android:text="100mmHG"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"

        />


    <TextView
        android:id="@+id/body_healthy_item_egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_healthy_item_data_tv"
        android:layout_marginBottom="13.5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="15.5dp"
        android:layout_toRightOf="@id/healthy_item_compress_data"
        android:text="总胆固醇:"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/body_healthy_item_data_tv"
        android:layout_marginBottom="13.5dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="15.5dp"
        android:layout_toRightOf="@id/body_healthy_item_egg"
        android:text="100mmHG"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"
        />


    <TextView
        android:id="@+id/body_healthy_item_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/body_healthy_item_data_tv"
        android:layout_marginBottom="13.5dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="15.5dp"
        android:text="查看报告"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"

        />
</RelativeLayout>