<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/modify_head_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/modify_head_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/modify_head"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:src="@drawable/modify_edit"
                        />


                </FrameLayout>

                <TextView
                    android:id="@+id/modify_user_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="编辑昵称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"
                    android:layout_below="@+id/modify_head_layout"
                    android:layout_alignLeft="@+id/modify_head_layout"
                    android:layout_alignStart="@+id/modify_head_layout"/>
            </RelativeLayout>

            <include layout="@layout/base_match_line_layout"></include>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="选择性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>


                <RadioGroup
                    android:id="@+id/modify_user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/modify_user_sex_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:checked="true"
                        android:textColor="#b3b3b3"
                        android:textSize="@dimen/text_size_15"/>


                    <RadioButton
                        android:id="@+id/modify_user_sex_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:text="女"
                        android:textColor="#b3b3b3"
                        android:textSize="@dimen/text_size_15"/>
                </RadioGroup>
            </RelativeLayout>

            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:id="@+id/modify_user_birth_layout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="生日"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="请选择"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>


            </RelativeLayout>

            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:id="@+id/modify_user_high_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="身高"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="cm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>

            </RelativeLayout>

            <include layout="@layout/base_match_line_layout"></include>


            <RelativeLayout
                android:id="@+id/modify_user_weight_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="体重"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:hint="kg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>

            </RelativeLayout>


            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="BMI"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="？"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>

            </RelativeLayout>


            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:id="@+id/modify_user_bind_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="绑定手机号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>


            </RelativeLayout>


            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="选择佩戴手"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"/>

                <RadioGroup
                    android:id="@+id/modify_user_bind_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/modify_user_bind_left"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="左"
                        android:checked="true"
                        android:textColor="#b3b3b3"
                        android:textSize="@dimen/text_size_15"/>


                    <RadioButton
                        android:id="@+id/modify_user_bind_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:text="右"
                        android:textColor="#b3b3b3"

                        android:textSize="@dimen/text_size_15"/>
                </RadioGroup>


            </RelativeLayout>

            <include layout="@layout/base_match_line_layout"></include>
        </LinearLayout>

    </ScrollView>

</LinearLayout>