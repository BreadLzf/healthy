<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ListView
                android:id="@+id/sport_recover_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/grey"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.5dp"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="14.5dp">


                <TextView
                    android:layout_width="4dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:background="@color/grey"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="康复计划"
                    android:textColor="#8dadc5"
                    android:textSize="@dimen/text_size_11"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="开始作业"
                    android:textColor="@color/login_base_color"
                    android:textSize="@dimen/text_size_13"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:text="康复计划"
                android:textColor="#3e3e3e"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:text="康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容"
                android:textColor="#4c4c4c"
                android:textSize="@dimen/text_size_13"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"></View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:text="康复计划"
                android:textColor="#3e3e3e"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="15dp"
                android:text="康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容康复计划内容"
                android:textColor="#4c4c4c"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey"></View>


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_marginLeft="@dimen/dp_12"
             android:layout_marginRight="@dimen/dp_12"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="4dp"
                 android:layout_height="10dp"
                 android:layout_centerVertical="true"
                 android:background="@color/grey"
                 />


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14.5dp"
                 android:layout_marginBottom="14.5dp"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="@dimen/dp_5"
                 android:gravity="center"
                 android:textColor="#8dadc5"
                 android:text="康复专家"
                 />

         </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">

                <ImageView
                    android:id="@+id/sport_two_super_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sport_recover_expert_head"/>


                <TextView
                    android:id="@+id/sport_two_expert_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="26dp"
                    android:layout_toRightOf="@id/sport_two_super_icon"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="专家姓名"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="14.5dp"
                    android:layout_below="@id/sport_two_expert_name_tv"
                    android:layout_toRightOf="@id/sport_two_super_icon"
                    android:text="专家的简介 介绍专家"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="23dp"
                    android:text="预约"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>