<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/custom_only_title_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/home_banner"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                >

                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@color/grey"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="健康日志"
                    android:textColor="#8adac5"
                    />
            </RelativeLayout>


            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/home_page_first_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28.5dp"
                    android:text="最近一次作业"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/text_size_15"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_page_first_work"
                    android:layout_marginBottom="28.5dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="颈部康复运动"
                    android:textColor="#a1a1a1"
                    android:textSize="@dimen/text_size_12"

                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"
                    />
            </RelativeLayout>


            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/home_page_cover_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28.5dp"
                    android:text="复诊时间"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/text_size_15"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_page_cover_time"
                    android:layout_marginBottom="28.5dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="2017-3-8"
                    android:textColor="#a1a1a1"
                    android:textSize="@dimen/text_size_12"


                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"
                    />
            </RelativeLayout>

            <include layout="@layout/base_match_line_layout"></include>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">

                <TextView
                    android:id="@+id/home_page_sport_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28.5dp"
                    android:text="运动处方"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/text_size_15"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_page_sport_type"
                    android:layout_marginBottom="28.5dp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="运动处方的项目名称"
                    android:textColor="#a1a1a1"
                    android:textSize="@dimen/text_size_12"

                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow"
                    />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/btn_bg_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="11.5dp"
                >

                <View
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@color/grey"></View>


                <TextView
                    android:id="@+id/home_page_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="推荐"
                    android:textColor="#8adac5"
                    />


            </RelativeLayout>

            <include layout="@layout/base_match_line_layout"></include>


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></ListView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>