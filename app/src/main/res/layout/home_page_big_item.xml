<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:layout_marginRight="11.5dp">

    <TextView
        android:id="@+id/home_page_big_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="吃药真的是一门大学问吃药真的是一门大学问吃药真的是一门大学问吃药真的是一门大学问"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_15"/>


    <ImageView
        android:id="@+id/home_page_big_img"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_below="@id/home_page_big_title"
        android:scaleType="fitXY"
        android:src="@drawable/do_home_big"
        />


    <TextView
        android:id="@+id/home_page_big_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_page_big_img"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:drawableLeft="@drawable/base_right_back"
        android:drawablePadding="13.5dp"
        android:text="颈部知识"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_page_big_img"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:drawableLeft="@drawable/base_right_back"
        android:drawablePadding="13.5dp"
        android:text="15"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"
        />


</RelativeLayout>