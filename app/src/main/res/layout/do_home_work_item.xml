<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:orientation="vertical">


    <TextView
        android:id="@+id/do_home_work_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.5dp"
        android:text="腹部-ABS"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_13"
        />


    <ImageView
        android:id="@+id/do_home_work_item_image"
        android:layout_width="98.5dp"
        android:layout_height="61.5dp"
        android:layout_below="@id/do_home_work_item_title"
        android:layout_marginBottom="23.5dp"
        android:layout_marginTop="9.5dp"
        android:src="@drawable/do_home_work_item_img"
        />


    <TextView
        android:id="@+id/do_home_work_item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21.5dp"
        android:layout_marginTop="56.5dp"
        android:layout_toRightOf="@id/do_home_work_item_image"
        android:text="左腿屈膝卷腹"

        />


    <TextView
        android:id="@+id/do_home_work_item_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/do_home_work_item_type_tv"
        android:layout_marginBottom="32.5dp"
        android:layout_marginLeft="21.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/do_home_work_item_image"
        android:text="10次"

        />


    <ImageView
        android:id="@+id/do_home_work_item_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/base_right_back"
        />

</RelativeLayout>