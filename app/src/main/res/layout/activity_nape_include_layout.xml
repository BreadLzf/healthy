<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/custom_tool_back"/>

    <RelativeLayout
        android:id="@+id/nape_detail_top_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nape_know_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="13.5dp"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@color/login_base_color"
            android:text="顶"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_size_10"
            />


        <TextView
            android:id="@+id/nape_know_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="19.5dp"
            android:layout_toRightOf="@id/nape_know_title"
            android:text="颈部常见知识"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_15"
            />

    </RelativeLayout>

    <include
        android:visibility="gone"

        layout="@layout/base_line_layout"/>

    <RelativeLayout
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nape_idea_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="13.5dp"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@color/login_base_color"
            android:text="顶"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_size_10"
            />


        <TextView
            android:id="@+id/nape_idea_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="19.5dp"
            android:layout_toRightOf="@id/nape_idea_title"
            android:text="颈部常见知识"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_15"
            />

    </RelativeLayout>

    <include
        android:visibility="gone"

        layout="@layout/base_line_layout"/>


    <RelativeLayout
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nape_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="13.5dp"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@color/login_base_color"
            android:text="顶"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_size_10"
            />


        <TextView
            android:id="@+id/nape_service_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="19.5dp"
            android:layout_toRightOf="@id/nape_service_title"
            android:text="颈部常见知识"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_15"
            />

    </RelativeLayout>

    <View
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="7.5dp"
        android:background="@color/btn_bg_gray"/>

     <ListView
         android:id="@+id/nape_list_view"
         android:layout_width="match_parent"
         android:layout_height="match_parent"></ListView>
</LinearLayout>