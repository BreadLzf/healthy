<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/login_phone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColorHint="@color/grey"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        ></View>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="43dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/login_password"
            />

        <EditText
            android:layout_toRightOf="@id/login_phone_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColorHint="@color/grey"
            android:hint="请输入密码"
            />


        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="42.5dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/login_safe"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        ></View>



    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_height="wrap_content"
        android:background="@color/login_base_color"
android:textColor="@color/white_90"
        android:text="登录"
        />


    <TextView
        android:layout_gravity="right"
        android:layout_marginTop="19.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"
        android:text="忘记密码"
        />




</LinearLayout>