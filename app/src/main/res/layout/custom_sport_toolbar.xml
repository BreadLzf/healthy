<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <android.support.v7.widget.Toolbar
        android:id="@+id/healthy_sport_tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
           <LinearLayout
               android:id="@+id/healthy_sport_tool_first_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/healthy_sport_tool_first"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/healthy_one_shape"
                   android:text="初诊"
                   android:textColor="@color/white_80"

                   />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/healthy_sport_tool_again_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/healthy_sport_tool_again"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/healthy_two_shape"
                   android:textColor="@color/white_80"
                   android:text="复诊"
                   />
           </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.Toolbar>


</RelativeLayout>