<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <include layout="@layout/custom_right_title_toolbar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/body_check_healthy_tg"
            android:layout_width="@dimen/dp_3"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@color/grey"
            />

        <TextView
            android:id="@+id/body_check_healthy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/body_check_healthy_tg"
            android:text="健康自测"
            android:textColor="@color/grey"
            />
    </RelativeLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        zhy:max_select="-1"
        >


    </com.zhy.view.flowlayout.TagFlowLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grey"
        ></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/body_healthy_self_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9.5dp"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="9.5dp"
            android:layout_toLeftOf="@+id/body_healthy_data_title"
            android:text="自测"
            android:textColor="#aeaeae"
            android:textSize="@dimen/text_size_15"
            />


        <TextView
            android:id="@+id/body_healthy_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9.5dp"
            android:layout_marginTop="9.5dp"
            android:text="数据"
            android:textColor="#aeaeae"
            android:textSize="@dimen/text_size_15"
            />


        <TextView
            android:id="@+id/body_healthy_trend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9.5dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="9.5dp"
            android:layout_toRightOf="@+id/body_healthy_data_title"
            android:text="健康趋势"
            android:textColor="#aeaeae"
            android:textSize="@dimen/text_size_15"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/body_check_self_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_50"></ListView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/body_check_healthy_test"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="预约测试"
                    android:textColor="@color/intro_blue_color"
                    />

                <Button
                    android:id="@+id/body_check_healthy_report"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="生成报告"
                    android:textColor="@color/intro_blue_color"
                    />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>