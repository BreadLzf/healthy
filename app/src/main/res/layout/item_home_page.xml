<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.5dp"
                android:layout_marginRight="11.5dp">

    <TextView
        android:id="@+id/home_page_big_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="想减多少减多少"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_15"/>


    <TextView
        android:id="@+id/home_page_big_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_page_content_layout"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:drawableLeft="@drawable/home_tag"
        android:drawablePadding="13.5dp"
        android:text="颈部知识"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"
        />


    <LinearLayout
        android:id="@+id/home_page_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/home_page_big_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/home_page_content_tv"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="dadasdasdasdasdasdasdadfasdfasdfasdfasdfasdfasdfasdfasdfasdfas56479+84
        1
        31"/>

        <ImageView
            android:id="@+id/home_page_big_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/home_message"
        android:drawablePadding="13.5dp"
        android:text="15"
        android:textColor="@color/login_base_color"
        android:textSize="@dimen/text_size_14"
        android:layout_alignBaseline="@+id/home_page_big_type"
        android:layout_alignBottom="@+id/home_page_big_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>